{
  "apiVersion": "v1",
  "kind": "PersistentVolumeClaim",
  "metadata": {
    "name": "mongo-storage",
    "namespace": "pacman"
  },
  "spec": {
    "accessModes": [
      "ReadWriteOnce"
    ],
    "resources": {
      "requests": {
        "storage": "8Gi"
      }
    }
  }
}
{
  "apiVersion": "v1",
  "kind": "Service",
  "metadata": {
    "labels": {
      "name": "mongo"
    },
    "name": "mongo",
    "namespace": "pacman"
  },
  "spec": {
    "ports": [
      {
        "nodePort": 30268,
        "port": 27017,
        "protocol": "TCP",
        "targetPort": 27017
      }
    ],
    "selector": {
      "name": "mongo"
    },
    "sessionAffinity": "None",
    "type": "LoadBalancer"
  }
}
{
  "apiVersion": "v1",
  "kind": "Service",
  "metadata": {
    "labels": {
      "name": "pacman"
    },
    "name": "pacman",
    "namespace": "pacman"
  },
  "spec": {
    "ports": [
      {
        "nodePort": 31161,
        "port": 80,
        "protocol": "TCP",
        "targetPort": 8080
      }
    ],
    "selector": {
      "name": "pacman"
    },
    "sessionAffinity": "None",
    "type": "LoadBalancer"
  }
}
{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "name": "mongo"
    },
    "name": "mongo",
    "namespace": "pacman"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "name": "mongo"
      }
    },
    "strategy": {
      "rollingUpdate": {
        "maxSurge": 1,
        "maxUnavailable": 1
      },
      "type": "RollingUpdate"
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "name": "mongo"
        }
      },
      "spec": {
        "containers": [
          {
            "args": [
              "--replSet",
              "rs0"
            ],
            "image": "mongo",
            "imagePullPolicy": "Always",
            "name": "mongo",
            "ports": [
              {
                "containerPort": 27017,
                "name": "mongo",
                "protocol": "TCP"
              }
            ],
            "resources": {},
            "terminationMessagePath": "/dev/termination-log",
            "terminationMessagePolicy": "File",
            "volumeMounts": [
              {
                "mountPath": "/data/db",
                "name": "mongo-db"
              }
            ]
          }
        ],
        "schedulerName": "default-scheduler",
        "volumes": [
          {
            "name": "mongo-db",
            "persistentVolumeClaim": {
              "claimName": "mongo-storage"
            }
          }
        ]
      }
    }
  }
}
{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "name": "pacman"
    },
    "name": "pacman",
    "namespace": "pacman"
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "matchLabels": {
        "name": "pacman"
      }
    },
    "strategy": {
      "rollingUpdate": {
        "maxSurge": 1,
        "maxUnavailable": 1
      },
      "type": "RollingUpdate"
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "name": "pacman"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "MONGO_REPLICA_SET",
                "value": "rs0"
              }
            ],
            "image": "gcr.io/ifontlabs/pacman-nodejs-app:latest",
            "imagePullPolicy": "Always",
            "name": "pacman",
            "ports": [
              {
                "containerPort": 8080,
                "name": "http-server",
                "protocol": "TCP"
              }
            ],
            "resources": {},
            "terminationMessagePath": "/dev/termination-log",
            "terminationMessagePolicy": "File"
          }
        ],
        "schedulerName": "default-scheduler"
      }
    }
  }
}
